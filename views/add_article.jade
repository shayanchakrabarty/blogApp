extends layout

block content
 .container
  h1 #{title}
  ul.errors
   if errors
    each error, i in errors
     li.alert.alert-danger #{error.msg}
  .col-md-6
   form(method='post', action='/articles/add')
    .form-group
     label Title:
     input.form-control(name='title', type='text')
    .form-group
     label Subtitle:
     input.form-control(name='subtitle', type='text')
    .form-group
     label Category
     select.form-control(name='category')
      each category, i in categories
       option(value='#{category._id}') #{category.title}
    .form-group
     label Body:
     textarea.form-control(name='body')
    .form-group
     label Author:
     input.form-control(name='author', type='text')
    input.btn.btn-primary(style='margin-right:2%;',type='submit', name='submit', value='Save')
    a(class='btn btn-danger', href="/manage/articles") Back
